<div class="navbar">
	<div class="navbar-inner">
		<div class="container-fluid">
			<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
				bootstrap.js<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</a>
			<a class="brand" href="#" name="top">iTours</a>
			<div class="nav-collapse collapse">
				<ul class="nav">
					<li><a href="/"><i class="icon-home"></i> Home</a></li>
					<li class="divider-vertical"></li>
					<li class="active"><a href="/"><i class="icon-file"></i> Most Viewed</a></li>
					<li class="divider-vertical"></li>
					<li><a href="/"><i class="icon-envelope"></i> Top Rated</a></li>
					<li class="divider-vertical"></li>
          <li><a href="/"><i class="icon-signal"></i> Lastest</a></li>
					<li class="divider-vertical"></li>
					<li><a href="/"><i class="icon-lock"></i> Choosen for you</a></li>
					<li class="divider-vertical"></li>
				</ul>
				<% if !user_signed_in? %>
				<ul class="nav pull-right">
					<li><%= link_to "Sign Up", new_user_registration_path  %></li>
          <li class="divider-vertical"></li>
					<li class="dropdown">
						<a class="dropdown-toggle" href="#" data-toggle="dropdown">Sign In <strong class="caret"></strong></a>
						<div class="dropdown-menu" style="padding: 15px; padding-bottom: 0px;">
							<%= form_for("user", :url => user_session_path) do |f| %>
						  	<%= f.text_field :username, :autofocus => true, :placeholder => t('activerecord.attributes.user.username') %>
								<%= f.password_field :password , :placeholder => t('activerecord.attributes.user.password') %>
								
								<%= f.check_box :remember_me, :style => 'float: left; margin-right: 10px;' %> <%= f.label :remember_me %>
								<%= f.submit "Sign in", :class => 'btn btn-info btn-block' %>
								<label style="text-align:center;margin-top:5px">or</label>
                <input class="btn btn-info btn-block" type="button" id="sign-in-google" value="Sign In with Google">
								<input class="btn btn-info btn-block" type="button" id="sign-in-twitter" value="Sign In with Twitter">
							<% end %>
						</div>
					</li>
				</ul>
				<% else %>
				<ul class="nav pull-right">
					<li><a href="/user_info">My Profile</a></li>
          <li class="divider-vertical"></li>
					<li><%= link_to('Sign Out', destroy_user_session_path, :method => :delete) %></li>
					
				</ul>
				<% end %>
			</div>
			<!--/.nav-collapse -->
		</div>
		<!--/.container-fluid -->
	</div>
	<!--/.navbar-inner -->
</div>
<!--/.navbar -->

<script>
$(document).ready(function()
{
  //Handles menu drop down
  $('.dropdown-menu').find('form').click(function (e) {
        e.stopPropagation();
        });
  });
</script>