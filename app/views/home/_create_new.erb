<div id="et-list-view" class="et-normal-listings left">
	<h2 id="listing-results">Create Your Trip</h2>

	<div id="et-listings">
		<div class="scrollbar">
			<div class="track">
				<div class="thumb" style="top: 0px; height: 105.48717948717949px;">
					<div class="end">
						
					</div>
				</div>
			</div>
		</div>
		<div class="viewport">
			<div class="overview" style="top: 0px;">
				<%= form_for([@tour], :html => {:class => ''} ) do |f| %>
				
		    <fieldset>
	        <!-- Address form -->
					<h4>Basic Info</h4>
							
	        <!-- title input-->
	        <div class="control-group">
	            <div class="controls">
								<%= f.text_field :title, :placeholder => t('activerecord.attributes.tour.title'), :class => 'input-xlarge' %>
	            </div>
	        </div>
			
	        <!-- shortDescription input-->
	        <div class="control-group">
	            <div class="controls">
								<%= f.text_field :shortDescription, :placeholder => t('activerecord.attributes.tour.shortDescription'), :class => 'input-xlarge' %>	
	            </div>
	        </div>

	        <!-- departureDate input-->
	        <div class="control-group">
	            <div class="controls">
								<div class="input-append">
								<%= text_field_tag nil, nil, 
									:placeholder => t('activerecord.attributes.tour.departureDate'), 
									:class =>"date-picker", 
									:data => { :alt_field_name => 'tour_departureDate'} %>
								<%= f.hidden_field :departureDate %>
								<span class="add-on"><i class="icon-calendar"></i></span>
								</div>	
	            </div>
	        </div>
					
	        <div class="control-group">
	          <div class="controls">
						  <%= f.submit "Create", 
								:class => 'btn btn-info',
								:data => {:loading_text => 'Loading...'} %>
					  </div>
				  </div>
					
				</fieldset>
				<% end %>
				
			</div> <!-- .overview -->
		</div> <!-- .viewport -->
	</div> <!-- #et-listings -->
<a href="#" class="et-date"><span>Add</span> Your Trip</a></div>