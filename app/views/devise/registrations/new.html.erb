
<% if false %>

<h2>Sign up</h2>


<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>
	
  <div><%= f.label :username %><br />
  <%= f.text_field :username, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>
<% end %>



<div class="container">
	<div class="row">
		<div class="span4 offset4 well">
			<legend>Please Sign Up</legend>
		  <%= devise_error_messages! %>
			
			<% if notice %>
				<div class="alert alert-notice">
					<a class="close" data-dismiss="notice" href="#">×</a><%= notice %>
				</div>
			<% end %>
			<% if alert %>
				<div class="alert alert-error">
					<a class="close" data-dismiss="alert" href="#">×</a><%= alert %>
				</div>
			<% end %>

			
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
				<% resource.build_user_info if resource.user_info.nil?  %>
				
				<%= f.text_field :email, :autofocus => true, :placeholder => t('activerecord.attributes.user.email'), :class => 'span4' %>
				<%= f.text_field :username, :placeholder => t('activerecord.attributes.user.username'), :class => 'span4' %>
				<%= f.password_field :password, :placeholder => t('activerecord.attributes.user.password'), :class => 'span4' %>
				<%= f.password_field :password_confirmation, :placeholder => t('activerecord.attributes.user.password_confirmation'), :class => 'span4' %>
				
	      <%= f.fields_for :user_info do |fui| %>
        	<%= fui.text_field :firstName, :placeholder => t('activerecord.attributes.user.username'), :class => 'span4' %>
	      <% end %>
				

        <%= f.check_box :remember_me, :style => 'float: left; margin-right: 10px;' %> <%= f.label :remember_me %>
				<%= f.submit "Sign up", :class => 'btn btn-info btn-block' %>
			<% end %>
			
			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>

